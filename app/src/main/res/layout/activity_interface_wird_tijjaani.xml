<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".InterfaceWirdTijjaani"
    android:background="#ffb0ff92">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:elevation="@android:dimen/app_icon_size"
        android:background="#803518ff">

        <Button
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:text="@string/blazim"
            android:id="@+id/button"
            android:textSize="22sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:text="@string/bwazifa"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:textSize="22sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:text="@string/bAsrou"
            android:id="@+id/button3"
            android:textSize="22sp" />

        <TextView
            android:layout_width="303dp"
            android:layout_height="76dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pageLbl"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textSize="26sp"
            android:textAlignment="center" />
    </LinearLayout>
</RelativeLayout>
